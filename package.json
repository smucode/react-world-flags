{
  "name": "react-world-flags",
  "version": "2.0.0-beta.3",
  "description": "SVG flags of the world for react",
  "main": "dist/react-world-flags.js",
  "module": "dist/react-world-flags.js",
  "types": "dist/react-world-flags.d.ts",
  "exports": {
    ".": {
      "types": "./dist/react-world-flags.d.ts",
      "import": "./dist/react-world-flags.js",
      "default": "./dist/react-world-flags.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smucode/react-world-flags.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "world",
    "flag",
    "flags",
    "svg"
  ],
  "author": "SMU",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smucode/react-world-flags/issues"
  },
  "homepage": "https://github.com/smucode/react-world-flags#readme",
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15",
    "world-countries": "^5.0.0",
    "flag-icons": "^7.5.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "build": "vite build",
    "build-demo": "rm -rf docs && vite build --config docs-conf/vite.config.js",
    "gen:countries": "node scripts/genCountryLookup.js",
    "copy:flags": "rm -rf ./src/svgs/*.svg && cp node_modules/flag-icons/flags/4x3/*.svg ./src/svgs/",
    "pre-publish": "npm run copy:flags && npm run gen:countries && npm run test && npm run build && npm run build-demo",
    "serve:docs": "(cd docs && python3 -m http.server 8000)"
  },
  "sideEffects": false,
  "type": "module"
}
