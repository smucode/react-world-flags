{
  "name": "react-world-flags",
  "version": "1.7.0",
  "description": "SVG flags of the world for react",
  "main": "dist/react-world-flags.js",
  "module": "dist/react-world-flags.js",
  "types": "dist/react-world-flags.d.ts",
  "exports": {
    ".": {
      "types": "./dist/react-world-flags.d.ts",
      "import": "./dist/react-world-flags.js",
      "default": "./dist/react-world-flags.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smucode/react-world-flags.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "world",
    "flag",
    "flags",
    "svg"
  ],
  "author": "SMU",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smucode/react-world-flags/issues"
  },
  "homepage": "https://github.com/smucode/react-world-flags#readme",
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "svg-country-flags": "^1.2.10",
    "svgo": "^4.0.0",
    "world-countries": "^5.0.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "build": "vite build",
    "build-demo": "vite build --config docs/vite.config.js",
    "gen:countries": "node scripts/genCountryLookup.js",
    "pre-publish": "npm run compress && npm run gen:countries && npm run test && npm run build && npm run build-demo",
    "compress": "rm -f ./src/svgs/* && npx svgo --multipass -f node_modules/svg-country-flags/svg/ ./src/svgs && (cd ./src/svgs && sed -i -e \"s/-inkscape-font-specification:'Narkisim, Normal'//g\" *) && cp node_modules/svg-country-flags/svg/si.svg ./src/svgs",
    "nocompress": "cp node_modules/svg-country-flags/svg/*.svg ./src/svgs"
  },
  "sideEffects": false,
  "type": "module"
}
